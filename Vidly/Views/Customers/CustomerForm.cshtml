@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix errors dawg")
    <div class="form-group">
        @Html.LabelFor(s => s.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(s=>s.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Customer.MembershipTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.Customer.Birthdate)
    </div>
    <div class="form-check">
        <label class="form-check-label">
            @Html.CheckBoxFor(s => s.Customer.IsSubscribedToNewsletter)
            Subscribed to Newletter?
        </label>
    </div>
    @Html.HiddenFor(s=>s.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}