@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Movie == null)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(s=>s.Movie.Name)
        @Html.TextBoxFor(s=>s.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s=>s.Movie.ReleaseDate)
        @Html.TextBoxFor(s=>s.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(s=>s.Movie.DateAdded)
        @Html.TextBoxFor(s=>s.Movie.DateAdded, "{0:d MMM yyyy}" , new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s=>s.Movie.NumberInStock)
        @Html.TextBoxFor(s=>s.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(s=>s.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
