@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(s=>s.Name)
        @Html.TextBoxFor(s=>s.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(s=>s.ReleaseDate)
        @Html.TextBoxFor(s=>s.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control"})
        @Html.ValidationMessageFor(s=>s.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(s=>s.NumberInStock)
        @Html.TextBoxFor(s=>s.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(s=>s.NumberInStock)
    </div>
    @Html.HiddenFor(s=>s.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")    
}